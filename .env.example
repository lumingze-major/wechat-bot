# 机器人配置
BOT_NAME=微信机器人
ADMIN_CONTACT=管理员微信号

# Puppet 配置
# 可选值: wechaty-puppet-wechat, wechaty-puppet-service
PUPPET_TYPE=wechaty-puppet-wechat

# wechaty-puppet-service 配置 (如果使用)
# PUPPET_SERVICE_TOKEN=your_service_token_here
# PUPPET_SERVICE_ENDPOINT=your_service_endpoint_here

# wechaty-puppet-wechat 配置
# 启用UOS协议可能更稳定，但可能被检测
PUPPET_WECHAT_UOS=false

# 豆包服务配置
DOUBAO_API_KEY=your_doubao_api_key_here
DOUBAO_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
DOUBAO_MODEL=your_doubao_model_here

# 功能开关
ENABLE_KNOWLEDGE=true
ENABLE_ENTERTAINMENT=true
ENABLE_TOOLS=true
ENABLE_GROUP_MANAGE=true

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/bot.log

# 数据存储
DATA_DIR=data
CACHE_TTL=3600