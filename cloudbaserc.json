{
  "envId": "{{env.TCB_ENVID}}",
  "functionRoot": "./",
  "functions": [
    {
      "name": "wechat-bot",
      "timeout": 300,
      "envVariables": {
        "NODE_ENV": "production",
        "PORT": "8080"
      },
      "runtime": "Nodejs18.15",
      "memorySize": 512,
      "handler": "index.main"
    }
  ],
  "hosting": {
    "public": "./public",
    "ignore": [
      "node_modules/**/*",
      ".git/**/*",
      "logs/**/*",
      "data/**/*"
    ]
  }
}